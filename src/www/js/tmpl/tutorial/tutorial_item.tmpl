<li class="vm_item {{#if top}}vm_top{{/if}}" style="margin-left:{{margin}}px">

    <span class="vm_desc {{size}} {{#unless single}}vm_clickable {{/unless}}">
        {{{obj.desc}}}
        {{#unless single}}
            <span class="ui-icon ui-icon-triangle-1-{{#if show}}s{{else}}e{{/if}}"></span>
        {{/unless}}
    </span>
    <div class="vm_container" {{#if show}}style="display:block;"{{/if}}>
        {{#if obj.text}}
            <span class="vm_text">
                {{#each obj.text}}
                    {{#with desc}}
                        <p>
                            {{{this}}}
                        </p>
                    {{/with}}
                    {{#with img}}
                        <img src="images/vm/{{{this}}}">
                    {{/with}}
                    {{#with bullet}}
                        <div class="vm_text_bullet">{{{this}}}</div>
                    {{/with}}
                    {{#with text}}
                        {{{this}}}
                    {{/with}}
                {{else}}
                    <p>
                        {{{obj.text}}}
                    </p>
                {{/each}}
            </span>
        {{/if}}

        {{#if obj.std}}
            <ul class="vm_hook"></ul>
        {{/if}}
        {{#if obj.ol}}
            <ol class="vm_hook"></ol>
        {{/if}}
        {{#if obj.ul}}
            <ul class="vm_hook vm_bullet"></ul>
        {{/if}}
    </div>
</li>