            overflow auto
            display none
            .vm_container
                width 1000px
                margin 50px  auto auto
                height 600px
                //border 1px solid #acacac
                position relative
                //border-radius: 5px
                //border-radius 5px
                //background-color #fafafa
                background transparent

                //background linear-gradient(center top, #fafafa, #dedede)
                //background linear-gradient(top, #ffffff, 5% #f5f5f5, 95% #f1f1f1);
                .vm_title
                    width 900px
                    //height 175px
                    user-select none
                    cursor default
                    //border 1px solid #777
                    margin auto
