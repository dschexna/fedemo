                            opacity 1
                            //box-shadow 0 3px 5px rgba(0, 0, 0, .7)
                            //border-color #666666

                    .vm_label
                        margin auto
                        font-family: "lato"
                        text-align center
                        opacity .9
                        color #f7f7f7
                    .vm_info
                        font-family: "lato"
                        background white
                        opacity .7
                        font-size 1.6em
                        padding 50px
                        text-align justify
                        line-height 25px

.vm_tutorial
    absolute top 0 left 0
    border-right 1px solid #777
    overflow auto
    background linear-gradient(left, #fff, #eee)
    font-size 1.2em
    .vm_minimize
        position fixed
        background    linear-gradient(top, rgba(235,235,235,1), rgba(202,202,202,1));
        height 75px
        border-radius 0 5px 5px 0
        .z_button
            border-top 30px solid transparent
            border-bottom 30px solid transparent
            border-right 12px solid #444
            border-left none
            margin-left 0;
        &.vm_collapsed .z_button
            border-left 12px solid #666
            border-right none
    &> li.vm_item.vm_top

        list-style none
        &> .vm_desc
            margin auto
            display block
            font-size 2.5em
            padding 10px 0
            color #00467F
            font-weight bold
            text-decoration underline
        &> ul.vm_hook
            display block
            margin-left 5px

    .vm_item:not(.vm_top)
        margin 7px 0
        .vm_desc
            &.vm_large
                font-size 24px
                color #00467F
            &.vm_med
                font-size 20px
                color #00467F
            &.vm_small
                font-size 16px
                color #00467F
            &.vm_std
                font-size 14px
            &.vm_strikeout
                opacity .4
                text-decoration line-through
            img
                vertical-align middle;
            user-select none
            color black
            cursor pointer
            font-weight bold
            &.vm_highlight
                background-color #c1c1c1
            .ui-icon
                display    inline-block
                relative   top 2px
        .vm_container
            display none
            margin-bottom 25px

    .vm_item
        strong
            font-size 12px
        ul.vm_bullet
            list-style disc outside
        ol
            list-style decimal outside
        .vm_text
            line-height 20px
            p
                text-align: justify;
                margin: 12px;
            div.vm_text_bullet
                list-style disc outside
                display list-item
                margin-left 30px
                margin-bottom 12px
            ul,ol
                margin-left 20px
            img.vm_newline
                width 400px
                margin-left 20px

