{
  "variables": {
    "iso_url": "http://mirrors.kernel.org/centos/6.5/isos/x86_64/CentOS-6.5-x86_64-minimal.iso",
    "iso_checksum": "f21a71e8e31df73297bdd1ccd4a64a36831284bd",
    "mapr_disk_size": "20480",
    "mapr_version": "3.1.0"
  },
  "builders": [{
    "type" : "docker",
    "image": "tianon/centos",
    "export_path": "mapr.tar",
    "pull" : true
  },
  {
    "vm_name"                 : "mapr-base-{{ user `mapr_version`}}",
    "type"                    : "virtualbox-iso",
    "format"                  : "ova",
    "http_directory"          : "http",
    "iso_url"                 : "{{ user `iso_url` }}",
    "iso_checksum"            : "{{ user `iso_checksum` }}",
    "iso_checksum_type"       : "sha1",
    "guest_os_type"           : "RedHat_64",
    "guest_additions_mode"    : "upload",
    "guest_additions_path"    : "VBoxGuestAdditions_{{.Version}}.iso",
    "virtualbox_version_file" : ".vbox_version",
    "ssh_username"            : "root",
    "ssh_password"            : "mapr",
    "ssh_wait_timeout"        : "20m",
    "boot_command"            : [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
    ],
    "shutdown_command"        : "shutdown -P now",
    "disk_size"               : 10140,
    "vboxmanage"              : [
      ["modifyvm", "{{.Name}}", "--memory", "6144"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"],
      ["createhd", "--filename", "output-virtualbox-iso/centos65-2.vdi", "--size", "{{ user `mapr_disk_size` }}", "--format", "VDI", "--variant", "Standard"],
      ["storageattach", "{{.Name}}", "--storagectl", "IDE Controller", "--port", "1", "--device", "1", "--type", "hdd", "--medium", "output-virtualbox-iso/centos65-2.vdi"]
    ]
  },{
    "vm_name" : "MapR-Sandbox-For-Hadoop-{{ user `mapr_version` }}",
    "type"    : "virtualbox-ovf",
    "source_path" : "output-virtualbox-iso/mapr-base-{{ user `mapr_version` }}.ova",
    "ssh_username" : "root",
    "ssh_password" : "mapr",
    "ssh_wait_timeout" : "300s",
    "shutdown_command" : "shutdown -P now",
    "format" : "ova",
    "vboxmanage" : [
      ["modifyvm", "{{.Name}}", "--memory", "6144"],
      ["modifyvm", "{{.Name}}", "--cpus", "2"]
    ]
  },
  {
    "vm_name": "mapr-{{ user `mapr_version` }}",
    "type": "qemu",
    "http_directory": "http",
    "iso_url": "{{ user `iso_url` }}",
    "iso_checksum": "{{ user `iso_checksum` }}",
    "iso_checksum_type": "sha1",
    "ssh_wait_timeout": "20m",
    "ssh_username": "root",
    "ssh_password": "mapr",
    "boot_command": [
      "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/ks.cfg<enter>"
    ],
    "shutdown_command": "shutdown -P now",
    "disk_size": 10140,
    "headless": false,
    "accelerator": "kvm",
    "net_device": "virtio-net",
    "disk_interface": "virtio",
    "qemuargs": [
      [ "-m", "512m" ]
    ]
  }],
  "provisioners": [{
    "type": "file",
    "source": "files/startup.tar.gz",
    "destination": "/tmp/startup.tar.gz",
    "only": ["virtualbox-ovf"]
    },{
    "type": "file",
    "source": "/home/MAPRTECH/share/jfota/mapr-core-3.1.0-VMDEMO.x86_64.rpm",
    "destination": "/tmp/mapr-core-3.1.0-VMDEMO.x86_64.rpm",
    "only": ["virtualbox-ovf"]
    },
    {
    "type": "shell",
    "execute_command": "bash '{{.Path}}'",
    "scripts": [
      "script/base.sh",
      "script/vagrant.sh",
      "script/sshd.sh",
      "script/vmtools.sh",
      "script/mapr-install.sh",
      "script/post.sh",
      "script/cleanup.sh",
      "script/zerodisk.sh"
    ],
    "only": ["virtualbox-ovf"]
  }]
}
